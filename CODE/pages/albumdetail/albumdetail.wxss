/* pages/albumdetail/albumdetail.wxss */

.albumHeader {
  height: 340rpx;
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  border-color: whitesmoke;
}

.upperHeader {
  margin-top: 120rpx;
  margin-bottom: 30rpx;
  flex: 1;
  display: flex;
  justify-content: center;
}

.avaliableState {
  flex: 1;
  display: flex;
  align-items: center;
  margin-top: -10rpx;
  margin-bottom: 20rpx;
}

.albumContent {
  border-radius: 30rpx 30rpx 0rpx 0rpx;
  margin-top: -30rpx;
}

.contentHeader {
  display: flex;
  height: 80rpx;
  align-items: center;
  justify-content: flex-end;
}

.item-group {
    display: flex;
    height: 240rpx;
}

.album-item {
    width:240rpx;
    height:240rpx;
    flex: 1;
    margin: 0.1rem;
    background: #333;
    text-align: center;
    line-height: 6.66rem;
}

.album-item.empty {
    background: transparent;
    width:240rpx;
    height:240rpx;
    flex: 1;
    margin: 0.1rem;
    text-align: center;
    line-height: 6.66rem;
}

.upload-image{
  position: fixed;
  bottom: 10rpx;
  right: 20rpx; 
}
.button{
  width: 60%;
  background-color: gray;
  color: white;
}

.integral-goroup{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-bottom: 30rpx;
}

.integral-goroup-in-right{
  display:flex;
  background-color:white;
  padding:20rpx;
  flex-direction: column;
  border-top-right-radius: 20rpx;
  border-bottom-left-radius:20rpx;
  border-bottom-right-radius: 20rpx;
  justify-content: space-between;
  width:80%; 
}