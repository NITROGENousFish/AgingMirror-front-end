.root{
  padding-top: 260rpx;
}
.background{
  width: 100%;
  height: 100%;
  position: absolute; 
  top:-230rpx;
  background-size:100% 100%;
  z-index: -1;
}
.constriction_card{
  margin: 30rpx;
  padding: 30rpx;
  border-radius: 10rpx;
  background-color: white;
  border-color: black;
  border-style: solid;
  border-width: 1rpx;
}

.blue_header{
  font-weight: bold;
  color: #1389c0;
  font-family: sans-serif;
  font-size: 15pt;
}

.content{
  margin-bottom:15rpx;
  align-items:center;
  display: flex;
  flex-direction: row;
  
}

.line{
  margin: 20rpx 0 20rpx;
  width: 100%;
  border-width:3rpx;
  border-color: lightgray;
  border-style: solid;
}

.dot{
  height: 10rpx;
  width: 10rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  background-color: lightgray;
  border-radius: 10rpx;
  border-color: lightgray;
  border-style: solid;
}

.button{
  width: 60%;
  background-color: #1389c0;
  color: white;
}